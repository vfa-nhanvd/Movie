<%= form_for([:admin, @admin_episode], :html => {:class => "bs-docs-example form-horizontal nf_detail_backend"}) do |f| %>
  <% if @admin_episode.errors.any? %>
    <div class="control-group error">
      <h2><%= pluralize(@admin_episode.errors.count, "error") %> prohibited this admin_movie from being saved:</h2>
      <ul>
      <% @admin_episode.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <label class="control-label" for="input"><span class="s_validation">*</span>Tên tập phim</label>
    <div class="controls">
      <%= f.text_field :name %>
      <span class="help-inline">Không được trống</span>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input"><span class="s_validation">*</span>Thuộc phim</label>
    <div class="controls">
      <%= f.select :movie_id, Movie.all.map{|c| [c.name, c.id]}%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input"><span class="s_validation">*</span>Server</label>
    <div class="controls">
      <%= f.select :server_id, Server.all.map{|c| [c.name, c.id]}%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input"><span class="s_validation">*</span>Link</label>
    <div class="controls">
      <%= f.text_field :link %>
      <span class="help-inline">Không được trống</span>
    </div>
  </div>
  <div class="form-actions">
     <%= f.submit "Save", :class => "btn btn-primary" %>
     <%= link_to "Cancel", admin_movie_makers_path, :class => "btn" %>
   </div>
<% end %>
