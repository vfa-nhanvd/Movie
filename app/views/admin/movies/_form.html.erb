<%= form_for([:admin, @admin_movie], :html => {:class => "bs-docs-example form-horizontal nf_detail_backend"}) do |f| %>
  <% if @admin_movie.errors.any? %>
    <div class="control-group error">
      <h2><%= pluralize(@admin_movie.errors.count, "error") %> prohibited this admin_movie from being saved:</h2>
      <ul>
      <% @admin_movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <label class="control-label" for="input"><span class="s_validation">*</span>Tên Phim</label>
    <div class="controls">
      <%= f.text_field :name %>
      <span class="help-inline">Không được trống</span>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input"><span class="s_validation">*</span>Tên Phim Gốc</label>
    <div class="controls">
      <%= f.text_field :original_name %>
      <span class="help-inline error">Không được trống</span>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Đạo Diễn</label>
    <div class="controls">
      <%= f.text_field :director_tokens, :class => "t_f_more_size", "data-pre" => @admin_movie.directors.map(&:attributes).to_json%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Diễn Viên</label>
    <div class="controls">
      <%= f.text_field :actor_tokens, :class => "t_f_more_size", "data-pre" => @admin_movie.actors.map(&:attributes).to_json%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Thể Loại</label>
    <div class="controls">
      <%= f.text_field :category_tokens, :class => "t_f_more_size", "data-pre" => @admin_movie.categories.map(&:attributes).to_json%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Server</label>
    <div class="controls">
      <%= f.text_field :server_tokens, :class => "t_f_more_size", "data-pre" => @admin_movie.servers.map(&:attributes).to_json%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Quốc Gia</label>
    <div class="controls">
      <%= f.select :country_id, Country.all.map{|c| [c.name, c.id]}%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Hãng Sản Xuất</label>
    <div class="controls">
      <%= f.select :movie_maker_id, MovieMaker.all.map{|c| [c.name, c.id]}%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Ngày Phát Hành</label>
    <div class="controls">
      <%= f.text_field :release_date%>
      <span class="help-inline">dd/mm/yy</span>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Ngày Công Chiếu</label>
    <div class="controls">
      <%= f.text_field :premiere_date%>
      <span class="help-inline">dd/mm/yy</span>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input"><span class="s_validation">*</span>Thông Tin Phim</label>
    <div class="controls">
      <%= f.text_area :info, :rows => 30, :cols => 200, :class => "t_f_more_size"%>
      <span class="help-inline">Không được trống</span>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input"><span class="s_validation">*</span>Link Trailer</label>
    <div class="controls">
      <%= f.text_field :link_trailer, :class => "t_f_more_size"%>
      <span class="help-inline">Link youtube</span>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Độ Dài</label>
    <div class="controls">
      <%= f.text_field :length%>
      <span class="help-inline">120 phút || 30 tập</span>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Hot</label>
    <div class="controls">
      <%= f.check_box :hot%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Đang Chiếu Rạp</label>
    <div class="controls">
      <%= f.check_box :has_shown%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input">Phân Loại Phim</label>
    <div class="controls">
      <%= f.select :kind, Movie::Kind.invert%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input"><span class="s_validation">*</span>Image</label>
    <div class="controls">
      <%= f.file_field :image%>
      <span class="help-inline">Không được trống</span>
    </div>
  </div>
  <div class="form-actions">
     <%= f.submit "Save", :class => "btn btn-primary" %>
     <%= link_to "Cancel", admin_movies_path, :class => "btn" %>
   </div>
<% end %>
