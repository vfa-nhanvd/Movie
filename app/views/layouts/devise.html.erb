<!DOCTYPE html>
<html>
 <head>
  <title>Rạp phim - Login</title>
  <%= stylesheet_link_tag "admin"%>
  <%= javascript_include_tag "admin"%>
  <%= csrf_meta_tags %>
  </script>
 </head>
 <body screen_capture_injected="true">
  <div class="navbar navbar-inverse navbar-fixed-top">
   <div class="navbar-inner">
    <div class="container">
     <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
     </button>
     <a class="brand" href="/" style="float: left;">Trang chủ</a>
    </div>
   </div>
  </div>
  <div class="container">
   <div class="row">
    <div class="span12 s2_middle">
     <% unless flash[:notice].blank? %>
     <div class="notice_m alert alert-success">
      <button type="button" class="close" data-dismiss="alert">
       ×
      </button>
      <%= content_tag :div, flash[:notice] %>
     </div>
     <% end %>

     <% unless flash[:error].blank? %>
     <div class="notice_m alert alert-error">
      <button type="button" class="close" data-dismiss="alert">
       ×
      </button>
      <%= content_tag :div, flash[:error] %>
     </div>
     <% end %>

     <% unless flash[:alert].blank? %>
     <div class="notice_m alert alert-error">
      <button type="button" class="close" data-dismiss="alert">
       ×
      </button>
      <%= content_tag :div, flash[:alert] %>
     </div>
     <% end %>

     <%= yield%>
    </div>
   </div>
  </div>
 </body>
</html>
